{
	"name": "zendesk-challenge",
	"version": "1.0.0",
	"description": "A Zendesk ticket retriever app for the Melbourne Zendesk Internship Challenge 2016.",
	"scripts": 
	{
		"watch": "watchify app.js -o public/js/bundle.js -v",
	    "browserify": "browserify app.js | uglifyjs > public/js/bundle.js",
		"test": "NODE_ENV=production mocha",
	    "build": "npm run browserify && npm run test",
    	"clean": "rimraf dist",
    	"start": "npm run watch && server.js"
	},
	"author": "Kaillan Reukers",
	"dependencies":
	{
		"express": "~4.9.7",
		"express-handlebars": "~1.1.0",
		"mongoose": "^4.5.2",
		"node-jsx": "~0.11.0",
		"node-zendesk": "^1.1.9",
		"react": "~0.11.2",
		"rimraf": "^2.5.2",
		"socket.io": "^1.1.0"
	},
	"devDependencies":
	{
		"browserify": "~6.0.3",
    	"heartbeats": "^3.1.3",
    	"mocha": "^2.4.5",
		"nodemon": "^1.2.1",
		"reactify": "~0.14.0",
		"uglify-js": "~2.4.15",
		"watchify": "~2.0.0"
	},
	"browserify": 
	{
		"transform":
		[
			"reactify"
		]
	}
}